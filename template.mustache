<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" title="{{config.description}}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="{{assets.style}}"/>
    <title>{{title}}</title>
</head>
<body>
  <header class="page-header">
    <nav class="page-header-nav">
      <ul class="items">
        <li class="item -logo">
          <a href="/" class="link"><img src="/header-logo.png"
             srcset="{{assets.header_logo}} 1x, {{assets.header_logo_2x}} 2x"
             alt="Myelin Logo"
             title="Myelin Logo"></a>
        </li>

        {{#nav}}
          <li class="item">
            <a href="{{path}}"
               class="link{{#is_active}} -active{{/is_active}}"
               title="{{title}}">{{title}}</a>
          </li>
        {{/nav}}
      </ul>
    </nav>
  </header>
  <main class="page-content">
    {{{content}}}
  </main>
  <footer class="page-footer">
    <div class="content">
      <div class="copyright">Â© {{year}} Myelin</div>
      <div class="info">
        Logo by <a href="https://github.com/NotAWeeb" class="link">@NotAWeeb</a>.
        Feather Icons by <a href="https://github.com/colebemis" class="link">@colebemis</a>.
      </div>
    </div>
  </footer>
</body>
</html>
